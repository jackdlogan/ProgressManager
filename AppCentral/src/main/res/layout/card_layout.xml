<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="match_parent"
              android:layout_width="match_parent">

    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="0dp"
            android:layout_margin="5dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/card_holder"
                    android:layout_alignParentStart="true"
                    android:background="@color/card_bg"/>

            <TextView
                    android:id="@+id/subject_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Project Name"
                    android:textSize="30dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_alignStart="@id/card_holder"
                    android:background="@color/card_comp"
                    android:textColor="#ff191919"/>

            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar"
                    android:progress="50"
                    android:layout_alignBottom="@+id/card_holder"
                    android:layout_alignParentStart="true"
                    android:progressDrawable="@drawable/progress_bar"
                    android:max="100"
                    android:indeterminate="false"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subject_name"
                    android:layout_above="@+id/progressBar"
                    android:weightSum="2">

                    <com.gc.materialdesign.views.ButtonFlat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Start Date"
                        android:id="@+id/start_date"
                        android:layout_below="@+id/subject_name"
                        android:layout_alignStart="@+id/subject_name"
                        android:layout_above="@+id/progressBar"
                        android:layout_weight="1"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="-1dp"
                        android:background="#ff191919"/>

                    <com.gc.materialdesign.views.ButtonFlat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Due Date"
                        android:id="@+id/due_date"
                        android:layout_below="@+id/subject_name"
                        android:layout_alignStart="@+id/subject_name"
                        android:layout_above="@+id/progressBar"
                        android:layout_weight="1"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="-1dp"
                        android:layout_marginRight="1dp"
                        android:background="#ff191919"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>